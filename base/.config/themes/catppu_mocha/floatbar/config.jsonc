    "scroll-step": 2,
    "format-muted": "Óª®",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    }
  },

  "custom/cava": {
  "format": "{}",
  "exec": "~/.config/waybar/cava.sh"
   },


  "mpris": {
    "format": "ÔÅã {artist} ‚Äî {title}",
    "format-paused": "<span color='#d9d9d9'>Ôäã {artist} ‚Äî {title}</span>",
    "max-length": 15,
    "player-icons": {
      "default": "‚è∏",
      "mpv": "üéµ"
    },
    "status-icons": {
      "paused": "ÔÅå"
    }
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "Û∞õä",
      "deactivated": "Û∞æ´"    
    }
  },
  "custom/screenrecording-indicator": {
    "on-click": "omarchy-cmd-screenrecord",
    "exec": "$OMARCHY_PATH/default/waybar/indicators/screen-recording.sh",
    "signal": 8,
    "return-type": "json"
  },
  "tray": {
    "icon-size": 12,
    "spacing": 4,
    "show-passive-items": true
  }
}
