    "interval": 2,
    "critical-threshold": 85,
    "format": "Ôãâ {temperatureC}¬∞C",
    "format-critical": "Ôãá {temperatureC}¬∞C"
  },
    "clock": {
    "format": "{:%H:%M }",
    "format-alt": "{:L%d %B %Y}",
    "tooltip-format": "<span>{calendar}</span>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-click-right": "mode",
      "format": {
        "month": "<span color='#ffead3'><b>{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b>{}</b></span>"
      }
    },
    "on-click-right": "~/.local/share/omarchy/bin/omarchy-launch-floating-terminal-with-presentation omarchy-tz-select"
  },

    "network": {
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Ôá´"],
    "format": "{icon}",
    "format-wifi": "{icon}",
    "format-ethernet": "Û∞ÄÇ",
    "format-disconnected": "Û∞§Æ",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)",
    "tooltip-format-ethernet": "‚á£{bandwidthDownBytes}  ‚á°{bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "interval": 3,
    "spacing": 1,
    "on-click": "omarchy-launch-wifi"
  },
  "battery": {
    "format": "{capacity}% {time} {icon}",
    "format-discharging": "{icon}",
    "format-charging": "{icon} ÔÉß",
    "format-plugged": "Ôá¶",
    "format-icons": {
      "charging": ["ÔâÑ", "ÔâÑ", "ÔâÉ", "ÔâÉ", "ÔâÇ", "ÔâÇ", "ÔâÅ", "ÔâÅ", "ÔâÄ", "ÔâÄ"],
      "default": ["ÔâÑ", "ÔâÑ", "ÔâÉ", "ÔâÉ", "ÔâÇ", "ÔâÇ", "ÔâÅ", "ÔâÅ", "ÔâÄ", "ÔâÄ"]
    },
    "format-full": "ÔâÄ", // Updated to horizontal full
    "tooltip-format-discharging": "{power:>1.0f}W‚Üì {capacity}% {time} ",
    "tooltip-format-charging": "{power:>1.0f}W‚Üë {capacity}% {time}",
    "interval": 5,
    "on-click": "omarchy-menu power",
    "states": {
      "warning": 20,
      "critical": 10
    }
  },

   "bluetooth": {
    "format": "Ôäî",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Ôäî",
    "tooltip-format": "Devices connected: {num_connections}",
        "on-click": "kitty --class=Bluetui -e bluetui"
  },

  "pulseaudio": {
