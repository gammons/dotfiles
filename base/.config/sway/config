# Sway configuration for Omarchy
# Learn more: https://github.com/swaywm/sway/wiki

# CRITICAL: Define modifier key FIRST (before ANY includes that use it)
# Using Alt (Mod1) instead of Super (Mod4) to match your preference
set $mod Mod1
set $term alacritty
bindsym $mod+Return exec $term

# Use Omarchy defaults (but don't edit these directly!)
include ~/.local/share/omarchy/default/sway/autostart.conf
include ~/.local/share/omarchy/default/sway/bindings/media.conf
include ~/.local/share/omarchy/default/sway/bindings/clipboard.conf
include ~/.local/share/omarchy/default/sway/bindings/tiling-v2.conf
include ~/.local/share/omarchy/default/sway/bindings/utilities.conf
include ~/.local/share/omarchy/default/sway/envs.conf
include ~/.local/share/omarchy/default/sway/looknfeel.conf
include ~/.local/share/omarchy/default/sway/input.conf
include ~/.local/share/omarchy/default/sway/windows.conf
include ~/.config/omarchy/current/theme/sway.conf
#
# Change your own setup in these files (and overwrite any settings from defaults!)
include ~/.config/sway/outputs.conf
include ~/.config/sway/input.conf
include ~/.config/sway/bindings.conf
include ~/.config/sway/envs.conf
include ~/.config/sway/looknfeel.conf
include ~/.config/sway/autostart.conf

# Add any other personal Sway configuration below

# Window rules and scratchpad configurations
include ~/.config/sway/window-rules.conf

# Lid switch bindings (laptop lid open/close)
bindswitch lid:on exec ~/.config/sway/scripts/lid_down
bindswitch lid:off exec ~/.config/sway/scripts/lid_up
